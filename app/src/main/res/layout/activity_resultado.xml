<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_logo_desafio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAbrirWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abrir_web"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnCompartirInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compartir_la_informacion"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/btnAbrirWeb"
        app:layout_constraintStart_toStartOf="@+id/btnAbrirWeb"
        app:layout_constraintTop_toBottomOf="@+id/btnAbrirWeb" />


</androidx.constraintlayout.widget.ConstraintLayout>